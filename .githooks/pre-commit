#!/bin/bash
# ===================================
# Gitè‡ªåŠ¨åŒ–è§£å†³æ–¹æ¡ˆ - Pre-commité’©å­
# åœ¨æäº¤å‰æ‰§è¡Œä»£ç è´¨é‡æ£€æŸ¥å’Œæ ¼å¼åŒ–
# ===================================

set -e  # é‡åˆ°é”™è¯¯ç«‹å³é€€å‡º

# é¢œè‰²å®šä¹‰
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# æ—¥å¿—æ–‡ä»¶
LOG_FILE=".pre-commit.log"

# è®°å½•æ—¥å¿—å‡½æ•°
log() {
    echo "$(date '+%Y-%m-%d %H:%M:%S') - $1" >> "$LOG_FILE"
}

# æ‰“å°å¸¦é¢œè‰²çš„æ¶ˆæ¯
print_message() {
    local color=$1
    local message=$2
    echo -e "${color}$message${NC}"
    log "$message"
}

print_message $BLUE "ğŸš€ å¼€å§‹æ‰§è¡Œ Pre-commit æ£€æŸ¥..."

# æ£€æŸ¥æ˜¯å¦æœ‰æš‚å­˜çš„æ–‡ä»¶
if git diff --cached --quiet; then
    print_message $YELLOW "âš ï¸  æ²¡æœ‰æš‚å­˜çš„æ–‡ä»¶ï¼Œè·³è¿‡æ£€æŸ¥"
    exit 0
fi

# è·å–æš‚å­˜çš„æ–‡ä»¶åˆ—è¡¨
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM)
JS_FILES=$(echo "$STAGED_FILES" | grep -E '\.(js|jsx|ts|tsx)$' || true)
JSON_FILES=$(echo "$STAGED_FILES" | grep -E '\.json$' || true)
MD_FILES=$(echo "$STAGED_FILES" | grep -E '\.md$' || true)

print_message $BLUE "ğŸ“ æ£€æµ‹åˆ°çš„æ–‡ä»¶ç±»å‹ï¼š"
echo "   JavaScript/TypeScript: $(echo "$JS_FILES" | wc -l) ä¸ªæ–‡ä»¶"
echo "   JSON: $(echo "$JSON_FILES" | wc -l) ä¸ªæ–‡ä»¶"
echo "   Markdown: $(echo "$MD_FILES" | wc -l) ä¸ªæ–‡ä»¶"

# 1. æ£€æŸ¥Node.jsè¯­æ³•é”™è¯¯
if [ -n "$JS_FILES" ]; then
    print_message $BLUE "ğŸ” æ£€æŸ¥JavaScriptè¯­æ³•é”™è¯¯..."
    
    for file in $JS_FILES; do
        if [ -f "$file" ]; then
            # ä½¿ç”¨Node.jsæ£€æŸ¥è¯­æ³•
            if ! node -c "$file" 2>/dev/null; then
                print_message $RED "âŒ è¯­æ³•é”™è¯¯: $file"
                print_message $RED "è¯·ä¿®å¤è¯­æ³•é”™è¯¯åé‡æ–°æäº¤"
                exit 1
            fi
        fi
    done
    
    print_message $GREEN "âœ… JavaScriptè¯­æ³•æ£€æŸ¥é€šè¿‡"
fi

# 2. æ£€æŸ¥JSONæ–‡ä»¶æ ¼å¼
if [ -n "$JSON_FILES" ]; then
    print_message $BLUE "ğŸ” æ£€æŸ¥JSONæ–‡ä»¶æ ¼å¼..."
    
    for file in $JSON_FILES; do
        if [ -f "$file" ]; then
            if ! python -m json.tool "$file" > /dev/null 2>&1; then
                print_message $RED "âŒ JSONæ ¼å¼é”™è¯¯: $file"
                print_message $RED "è¯·ä¿®å¤JSONæ ¼å¼é”™è¯¯åé‡æ–°æäº¤"
                exit 1
            fi
        fi
    done
    
    print_message $GREEN "âœ… JSONæ ¼å¼æ£€æŸ¥é€šè¿‡"
fi

# 3. ä»£ç æ ¼å¼åŒ–ï¼ˆå¦‚æœå®‰è£…äº†prettierï¼‰
if command -v npx >/dev/null 2>&1 && npx prettier --version >/dev/null 2>&1; then
    if [ -n "$JS_FILES" ] || [ -n "$JSON_FILES" ] || [ -n "$MD_FILES" ]; then
        print_message $BLUE "ğŸ¨ æ‰§è¡Œä»£ç æ ¼å¼åŒ–..."
        
        # åˆ›å»ºä¸´æ—¶æ–‡ä»¶åˆ—è¡¨
        TEMP_FILE_LIST=$(mktemp)
        echo "$STAGED_FILES" > "$TEMP_FILE_LIST"
        
        # æ ¼å¼åŒ–æ–‡ä»¶
        if npx prettier --write --list-different $(echo "$STAGED_FILES" | tr '\n' ' ') 2>/dev/null; then
            print_message $GREEN "âœ… ä»£ç æ ¼å¼åŒ–å®Œæˆ"
            
            # é‡æ–°æ·»åŠ æ ¼å¼åŒ–åçš„æ–‡ä»¶åˆ°æš‚å­˜åŒº
            for file in $STAGED_FILES; do
                if [ -f "$file" ]; then
                    git add "$file"
                fi
            done
        else
            print_message $YELLOW "âš ï¸  ä»£ç æ ¼å¼åŒ–è·³è¿‡ï¼ˆprettieræœªæ­£ç¡®é…ç½®ï¼‰"
        fi
        
        rm -f "$TEMP_FILE_LIST"
    fi
else
    print_message $YELLOW "âš ï¸  Prettieræœªå®‰è£…ï¼Œè·³è¿‡ä»£ç æ ¼å¼åŒ–"
fi

# 4. æ£€æŸ¥æ•æ„Ÿä¿¡æ¯
print_message $BLUE "ğŸ”’ æ£€æŸ¥æ•æ„Ÿä¿¡æ¯..."

SENSITIVE_PATTERNS=(
    "password\s*=\s*['\"][^'\"]*['\"]"
    "api_key\s*=\s*['\"][^'\"]*['\"]"
    "secret\s*=\s*['\"][^'\"]*['\"]"
    "token\s*=\s*['\"][^'\"]*['\"]"
    "private[_-]key\s*=\s*['\"][^'\"]*['\"]"
    "-----BEGIN.*PRIVATE KEY-----"
    "mongodb://[^:]*:[^@]*@"
    "mysql://[^:]*:[^@]*@"
    "postgres://[^:]*:[^@]*@"
)

for file in $STAGED_FILES; do
    if [ -f "$file" ]; then
        # è·³è¿‡Gité’©å­æ–‡ä»¶çš„æ•æ„Ÿä¿¡æ¯æ£€æŸ¥
        if [[ "$file" == .githooks/* ]]; then
            continue
        fi

        for pattern in "${SENSITIVE_PATTERNS[@]}"; do
            if grep -iE "$pattern" "$file" >/dev/null 2>&1; then
                print_message $RED "âŒ æ£€æµ‹åˆ°æ•æ„Ÿä¿¡æ¯: $file"
                print_message $RED "   æ¨¡å¼: $pattern"
                print_message $RED "è¯·ç§»é™¤æ•æ„Ÿä¿¡æ¯æˆ–ä½¿ç”¨ç¯å¢ƒå˜é‡"
                exit 1
            fi
        done
    fi
done

print_message $GREEN "âœ… æ•æ„Ÿä¿¡æ¯æ£€æŸ¥é€šè¿‡"

# 5. æ£€æŸ¥æ–‡ä»¶å¤§å°
print_message $BLUE "ğŸ“ æ£€æŸ¥æ–‡ä»¶å¤§å°..."

MAX_FILE_SIZE=5242880  # 5MB
for file in $STAGED_FILES; do
    if [ -f "$file" ]; then
        file_size=$(stat -f%z "$file" 2>/dev/null || stat -c%s "$file" 2>/dev/null || echo 0)
        if [ "$file_size" -gt "$MAX_FILE_SIZE" ]; then
            print_message $RED "âŒ æ–‡ä»¶è¿‡å¤§: $file ($(($file_size / 1024 / 1024))MB)"
            print_message $RED "è¯·ç¡®è®¤æ˜¯å¦éœ€è¦æäº¤æ­¤å¤§æ–‡ä»¶"
            exit 1
        fi
    fi
done

print_message $GREEN "âœ… æ–‡ä»¶å¤§å°æ£€æŸ¥é€šè¿‡"

# 6. è¿è¡ŒåŸºç¡€æµ‹è¯•ï¼ˆå¦‚æœå­˜åœ¨ï¼‰
if [ -f "package.json" ] && grep -q '"test"' package.json; then
    print_message $BLUE "ğŸ§ª è¿è¡ŒåŸºç¡€æµ‹è¯•..."
    
    if npm test 2>/dev/null; then
        print_message $GREEN "âœ… æµ‹è¯•é€šè¿‡"
    else
        print_message $YELLOW "âš ï¸  æµ‹è¯•å¤±è´¥æˆ–è·³è¿‡ï¼Œä½†å…è®¸æäº¤"
        print_message $YELLOW "   å»ºè®®åœ¨æ¨é€å‰ä¿®å¤æµ‹è¯•é—®é¢˜"
    fi
fi

# 7. æ£€æŸ¥æäº¤ä¿¡æ¯æ¨¡æ¿
if [ ! -f ".gitmessage-template" ]; then
    print_message $BLUE "ğŸ“ åˆ›å»ºæäº¤ä¿¡æ¯æ¨¡æ¿..."
    cat > .gitmessage-template << 'EOF'
# æäº¤ç±»å‹: ç®€çŸ­æè¿° (ä¸è¶…è¿‡50å­—ç¬¦)
#
# è¯¦ç»†è¯´æ˜ (å¯é€‰ï¼Œæ¯è¡Œä¸è¶…è¿‡72å­—ç¬¦)
# - è§£é‡Šä¸ºä»€ä¹ˆåšè¿™ä¸ªæ”¹åŠ¨
# - è¯´æ˜æ”¹åŠ¨çš„å½±å“
# - æåŠç›¸å…³çš„issueæˆ–ticket
#
# æäº¤ç±»å‹è¯´æ˜:
# feat:     æ–°åŠŸèƒ½
# fix:      ä¿®å¤bug
# docs:     æ–‡æ¡£æ›´æ–°
# style:    ä»£ç æ ¼å¼åŒ–
# refactor: é‡æ„ä»£ç 
# test:     æ·»åŠ æˆ–ä¿®æ”¹æµ‹è¯•
# chore:    æ„å»ºè¿‡ç¨‹æˆ–è¾…åŠ©å·¥å…·çš„å˜åŠ¨
EOF
    print_message $GREEN "âœ… æäº¤ä¿¡æ¯æ¨¡æ¿å·²åˆ›å»º"
fi

print_message $GREEN "ğŸ‰ Pre-commit æ£€æŸ¥å…¨éƒ¨é€šè¿‡ï¼"
print_message $BLUE "ğŸ“Š æ£€æŸ¥ç»Ÿè®¡:"
echo "   - æ£€æŸ¥æ–‡ä»¶æ•°: $(echo "$STAGED_FILES" | wc -l)"
echo "   - JavaScriptæ–‡ä»¶: $(echo "$JS_FILES" | wc -l)"
echo "   - JSONæ–‡ä»¶: $(echo "$JSON_FILES" | wc -l)"
echo "   - Markdownæ–‡ä»¶: $(echo "$MD_FILES" | wc -l)"
echo "   - æ£€æŸ¥æ—¶é—´: $(date '+%Y-%m-%d %H:%M:%S')"

exit 0
