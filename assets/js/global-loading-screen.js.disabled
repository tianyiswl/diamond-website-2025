      const totalStates = stateKeys.length;
      const percentage = (completedStates / totalStates) * 100;

      let progressText = "æ­£åœ¨åŠ è½½é¡µé¢å†…å®¹...";

      if (this.states.domReady && !this.states.i18nReady) {
