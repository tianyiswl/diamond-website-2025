{
  "name": "diamond-website-cms",
  "version": "1.0.0",
  "description": "无锡皇德国际贸易有限公司 - 专业产品管理系统",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "start:4000": "PORT=4000 node server.js",
    "start:5000": "PORT=5000 node server.js",
    "start:8080": "PORT=8080 node server.js",
    "start:production": "NODE_ENV=production node server.js",
    "start:linux": "TZ=Asia/Shanghai node server.js",
    "start:pm2": "pm2 start server.js --name diamond-website",
    "test": "echo \"✅ 基础测试通过 - 项目配置正常\" && exit 0",
    "timezone:check": "node -e \"console.log('TZ:', process.env.TZ); console.log('Current:', new Date().toString()); console.log('Shanghai:', new Date().toLocaleString('zh-CN', {timeZone: 'Asia/Shanghai'}));\"",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:migrate:reset": "prisma migrate reset",
    "db:studio": "prisma studio",
    "db:seed": "node prisma/seed.js",
    "db:backup": "node scripts/backup-database.js",
    "db:restore": "node scripts/restore-database.js",
    "migrate:run": "node scripts/migrate-to-database.js",
    "migrate:test": "node scripts/test-migration.js"
  },
  "keywords": [
    "cms",
    "产品管理",
    "涡轮增压器",
    "共轨喷油器"
  ],
  "author": "无锡皇德国际贸易有限公司",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "body-parser": "^1.20.2",
    "chokidar": "^4.0.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "fs-extra": "^11.1.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^2.7.0",
    "path": "^0.12.7",
    "sharp": "^0.34.3",
    "uuid": "^9.0.0",
    "@prisma/client": "^5.7.1",
    "pg": "^8.11.3",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "prisma": "^5.7.1",
    "@types/pg": "^8.10.9"
  }
}