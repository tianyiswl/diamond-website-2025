# 🔐 生产环境配置文件
# 无锡皇德国际贸易有限公司 - 钻石网站项目
# ⚠️ 重要：此文件包含敏感信息，请勿提交到版本控制系统

# 应用基本配置
NODE_ENV=production
PORT=4000
APP_NAME=diamond-website
APP_VERSION=1.0.0

# 域名配置
DOMAIN=your-domain.com
BASE_URL=https://your-domain.com

# 安全配置
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-2025
BCRYPT_ROUNDS=12
SESSION_TIMEOUT=3600000

# 数据库配置（如果使用外部数据库）
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=diamond_website
# DB_USER=diamond_user
# DB_PASSWORD=your-secure-database-password

# Redis 配置（如果使用）
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=diamond-redis-2025
REDIS_DB=0

# 文件上传配置
UPLOAD_MAX_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,webp,pdf

# 邮件配置（如果需要）
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@your-domain.com
SMTP_PASSWORD=your-email-password
FROM_EMAIL=noreply@your-domain.com
FROM_NAME=无锡皇德国际贸易有限公司

# 日志配置
LOG_LEVEL=info
LOG_FILE=./logs/app.log
ERROR_LOG_FILE=./logs/error.log

# 缓存配置
CACHE_TTL=3600
STATIC_CACHE_TTL=31536000

# 限流配置
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
API_RATE_LIMIT_MAX=50
ADMIN_RATE_LIMIT_MAX=20

# 监控配置
HEALTH_CHECK_ENDPOINT=/api/health
METRICS_ENDPOINT=/api/metrics

# 第三方服务配置
# GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
# GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# CDN 配置（如果使用）
# CDN_URL=https://cdn.your-domain.com
# CDN_ENABLED=true

# 备份配置
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400000
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./backups

# 安全头配置
SECURITY_HEADERS_ENABLED=true
CORS_ORIGIN=https://your-domain.com
CSP_ENABLED=true

# 性能配置
COMPRESSION_ENABLED=true
COMPRESSION_LEVEL=6
STATIC_GZIP_ENABLED=true

# 错误报告（如果使用Sentry等）
# SENTRY_DSN=https://your-sentry-dsn
# ERROR_REPORTING_ENABLED=true
